{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SHUKABASE",
  "version": "0.1.1",
  "identifier": "com.shukabase.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Shukabase AI",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/amritagopi/shukabase-ai/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "rag_api_server.exe"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/installer_header.bmp",
        "sidebarImage": "icons/installer_sidebar.bmp",
        "installMode": "currentUser",
        "displayLanguageSelector": true,
        "languages": [
          "English",
          "Russian"
        ]
      }
    }
  }
}